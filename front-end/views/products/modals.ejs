        </div>
        <div class="col-12">
          <label for="edit-description" class="form-label">Description</label>
          <textarea name="description" id="edit-description" class="form-control" rows="2" aria-label="Product description" required></textarea>
        </div>
        <div class="col-md-4">
          <label for="edit-unitprice" class="form-label">Price</label>
          <input name="unitprice" type="number" step="1" id="edit-unitprice" class="form-control" aria-label="Product price" min="1" required>
        </div>
        <div class="col-md-4">
          <label for="edit-quantity" class="form-label">Quantity</label>
          <input name="quantity" type="number" id="edit-quantity" class="form-control" aria-label="Product quantity" min="1" required>
        </div>
        <div class="col-md-4">
          <label for="edit-categoryId" class="form-label">Category</label>
          <select name="CategoryId" id="edit-categoryId" class="form-select" aria-label="Select Category" required>
            <% filters.categories.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-6">
          <label for="edit-brandId" class="form-label">Brand</label>
          <select name="BrandId" id="edit-brandId" class="form-select" aria-label="Select Brand" required>
            <% filters.brands.forEach(brand => { %>
              <option value="<%= brand.id %>"><%= brand.name %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary" aria-label="Save changes">Save Changes</button>
      </div>
    </form>
  </div>
</div>

<!-- DELETE CONFIRM MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form method="post" class="modal-content bg-dark text-light" id="deleteProductForm">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" aria-label="Close Delete Modal" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <strong id="delete-product-name">this product</strong>?
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger" aria-label="Delete product">Delete</button>
      </div>
    </form>
  </div>
</div>

