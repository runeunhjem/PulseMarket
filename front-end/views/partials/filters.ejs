<!-- Filter Toggle -->
<div class="text-end mb-3">
  <button class="btn btn-outline-light me-0" id="toggle-filter">Filters <i class="bi bi-ui-checks"></i></button>
</div>

<!-- Slide-In Filter Panel -->
<div id="filter-panel" class="filter-panel bg-dark text-white shadow p-4">
  <form method="GET" action="<%= requestPath %>">
    <h5 class="mb-3">Filter by Category</h5>
    <div id="category-checkboxes" class="mb-4" style="max-height: 200px; overflow-y: auto"></div>

    <h5 class="mb-3">Filter by Brand</h5>
    <div id="brand-checkboxes" class="mb-4" style="max-height: 200px; overflow-y: auto"></div>

    <button class="btn btn-primary w-100" type="submit">Apply Filters</button>
    <a href="<%= requestPath %>" class="btn btn-outline-light w-100 mt-2">Clear All</a>
  </form>
</div>

<!-- Overlay -->
<div id="overlay" class="overlay"></div>
